<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/loginLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical"
                >

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:overScrollMode="never" />

            <com.viewpagerindicator.LinePageIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                app:centered="true"
                app:fillColor="@color/colorPrimaryDark"
                app:pageColor="@color/colorPrimary"
                app:snap="false"
                tools:ignore="ObsoleteLayoutParam" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/loginCardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    app:cardElevation="10dp"
                    android:background="@color/black_light"
                    android:foreground="@android:color/transparent"
                    app:cardCornerRadius="25dp"
                    android:layout_margin="10dp"
                    tools:ignore="UnusedAttribute"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="Enter Number"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp">

                           <!-- <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:padding="3dp"
                                android:textColor="@color/black"
                                android:text="+91"
                                tools:ignore="HardcodedText" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:background="@color/light_white"/>
-->
                            <EditText
                                android:id="@+id/mobileNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center|left"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:textSize="18sp"
                                android:hint="Mobile Number [10-digit]"
                                android:maxLength="10"
                                android:inputType="numberDecimal"
                                android:imeOptions="actionDone"
                                android:digits="0123456789"
                                android:textColor="@color/black"
                                tools:ignore="Autofill,LabelFor,RtlHardcoded" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="By tapping continue, I agree to the terms of use"
                            android:textSize="13sp"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/light_black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/send"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:background="@drawable/btn_login"
                            android:backgroundTint="@color/marun"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/white"
                            android:text="continue"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Explore Now"
                            android:textAllCaps="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/otpCardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    app:cardElevation="10dp"
                    android:background="@color/black_light"
                    android:foreground="@android:color/transparent"
                    app:cardCornerRadius="25dp"
                    android:layout_margin="10dp"
                    tools:ignore="UnusedAttribute"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Enter OTP"
                            android:textSize="20sp"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            tools:ignore="HardcodedText" />

                        <in.aabhasjindal.otptextview.OtpTextView
                            android:id="@+id/otp_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            app:bar_active_color="@color/colorAccent"
                            app:bar_enabled="true"
                            app:bar_error_color="@color/red"
                            app:bar_height="1.5dp"
                            android:layout_gravity="center"
                            app:bar_inactive_color="@color/grey"
                            app:bar_margin_bottom="0dp"
                            app:bar_margin_left="2dp"
                            app:bar_margin_right="2dp"
                            app:bar_success_color="@color/colorPrimary"
                            app:box_margin="0dp"
                            app:height="50dp"
                            app:hide_otp="false"
                            app:length="4"
                            app:otp=""
                            app:otp_text_size="17sp"
                            app:width="50dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:layout_marginTop="20dp"
                            android:text="Enter OTP Code,\nwe have sent on mobile number"
                            tools:ignore="HardcodedText"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/txtmobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="please check"
                            tools:ignore="HardcodedText"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="your message inbox"
                            android:visibility="gone"
                            tools:ignore="HardcodedText" />

                        <Button
                            android:id="@+id/verify"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:background="@drawable/btn_login"
                            android:backgroundTint="@color/red_200"
                            android:padding="10dp"
                            android:layout_margin="25sp"
                            android:textColor="@color/white"
                            android:text="Submit"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>