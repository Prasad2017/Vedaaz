<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/black"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="5dp"
        app:cardElevation="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutborder"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_subproduct"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/milk"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/yellowbill"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:id="@+id/tv_subproductname_milk"
                android:textSize="13dp"
                android:text="">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tv_subproductdesc"
                android:text="500 ml Pouch">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="13dp"
                    android:text="MRP:">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_mrpratemilk"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:text="23">
                </TextView>
            </LinearLayout>



            <TextView
                android:layout_width="110dp"
                android:layout_height="33dp"
                android:layout_marginTop="15dp"
                android:id="@+id/tv_subscribesubproductmilk"
                android:textSize="11dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_round"
                android:text="Subscribe rs 23 "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/tv_buyoncemilkmilk"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/buyonceborder"
                android:fontFamily="sans-serif"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="BUY ONCE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:background="@color/marun"
                android:visibility="gone"
                android:gravity="center">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/img_minus_milk"
                    android:layout_marginRight="3dp"
                    android:visibility="gone">

                </ImageView>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:id="@+id/tv_quantity_milk_milk"
                    android:layout_marginLeft="2dp"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:text="1">

                </TextView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/img_plus_milk"
                    android:layout_marginRight="3dp"
                    android:visibility="gone">

                </ImageView>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>