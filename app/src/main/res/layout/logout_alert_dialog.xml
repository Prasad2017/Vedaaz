<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linaer_logtitle"
        android:visibility="visible"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   Alert"
            android:padding="5dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:gravity="left|center"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_exit"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        android:orientation="horizontal">


        <TextView
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:textStyle="bold"
            android:text="EXIT"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_gravity="right|top"
            android:id="@+id/img_dialogexit"
            android:src="@drawable/referandearn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_logmesg"

        android:layout_marginBottom="30dp"
        android:layout_below="@+id/linear_exit">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_alertmessage"
            android:text="Are you sure to logout ?"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/linear_logmesg">



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:collapseColumns="1">


            <TableRow
                android:id="@+id/row1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/tv_ok"
                    android:visibility="gone"
                    android:text="Ok"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/tv_cancel"
                    android:text="Cancel"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="18dp"/>

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/red_700"
                    android:gravity="center"
                    android:text="No"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal"

                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_Cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/green_600"
                    android:gravity="center"
                    android:text="YES"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="normal" />



                <Button
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_updateee"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="UPADTE"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:background="#1A73a7"
                    android:textSize="14dp"/>



                <Button
                    android:id="@+id/btn_searchCall1"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:background="#1A73a7"
                    android:padding="5dp"
                    android:text="SEARCH"
                    android:textSize="15dp" />



            </TableRow>
        </TableLayout>





    </LinearLayout>



</RelativeLayout>