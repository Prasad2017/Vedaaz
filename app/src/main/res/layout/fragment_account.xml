<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/silver"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/relative_userimg"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:id="@+id/imgageview_profile"
                            android:layout_margin="10dp"
                            android:foregroundGravity="center"
                            app:civ_circle_background_color="@color/yellow"
                            app:civ_border_color="@color/yellow"
                            app:civ_border_width="2dp"
                            app:srcCompat="@android:drawable/sym_def_app_icon" >

                        </de.hdodenhof.circleimageview.CircleImageView>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/relative_userimg"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Xyz"
                            android:textSize="15dp"
                            android:textColor="@color/black">

                        </TextView>


                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="9876543210"
                            android:textSize="15dp"
                            android:textColor="@color/black">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="softmate.system@gmail.com"
                            android:textSize="13dp"
                            android:textColor="@color/black">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/relative_userimg"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="wrap_content"
                            android:padding="2dp"
                            android:layout_height="30dp"
                            android:id="@+id/btn_editaddressaccount"
                            android:text="EDIT"
                            android:textSize="14dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginRight="5dp"
                            android:drawableRight="@drawable/edit32"
                            android:drawablePadding="5dp"
                            android:textColor="@color/orrangeyeeloo"
                            android:background="@drawable/btn_backgroud_transperent">
                        </Button>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"

                    android:background="@color/darker_gray"
                    >
                </View>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:layout_marginLeft="8dp"
                            android:text="Delivery Address">

                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:textSize="13dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"

                            android:text="  Other Building">

                        </TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        >


                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_chevron_right_black_24dp">

                        </ImageView>
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_logomysubaccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"

                        android:src="@drawable/mysubscription32"/>


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"

                        android:layout_toRightOf="@+id/img_logomysubaccount"
                        android:gravity="center|left"
                        android:text="My Subscription"
                        android:textColor="@color/black"
                        android:textSize="14dp">

                    </TextView>


                    <ImageView
                        android:id="@+id/img_mysubaccountarrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"

                        android:src="@drawable/ic_chevron_right_black_24dp">

                    </ImageView>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/darker_gray">

                </View>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/img_logomyorderaccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/myorders32"/>


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"

                        android:layout_toRightOf="@+id/img_logomyorderaccount"
                        android:gravity="center|left"
                        android:text="My Order"
                        android:textColor="@color/black"
                        android:textSize="14dp">

                    </TextView>


                    <ImageView
                        android:id="@+id/img_myorderaccountarrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"

                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_chevron_right_black_24dp">

                    </ImageView>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/darker_gray">

                </View>


                <RelativeLayout
                    android:id="@+id/walletLayout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_logomywalletaccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/mywallet"/>


                    <TextView
                        android:id="@+id/myWallet"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_logomywalletaccount"
                        android:gravity="center|left"
                        android:text="My Wallet"
                        android:textColor="@color/black"
                        android:textSize="14dp">

                    </TextView>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/img_mywalletraccountarrow"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"

                        android:src="@drawable/ic_chevron_right_black_24dp">

                    </ImageView>

                </RelativeLayout>




            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:padding="2dp">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/img_logoringbellaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/notificationbell32"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_logoringbellaccount"
                    android:gravity="center|left"
                    android:layout_centerVertical="true"
                    android:text="Ring the bell"
                    android:textColor="@color/black"
                    android:textSize="14dp">

                </TextView>


                <Switch
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/switch_ring"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"

                    android:src="@drawable/ic_chevron_right_black_24dp">

                </Switch>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>















    </LinearLayout>
</LinearLayout>